<launch>
  <!-- Gazebo world -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="verbose" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="world_name" value="$(find gazebo_ros)/worlds/empty.world"/>
  </include>

  <!-- Jackal UGV -->
  <include file="$(find jackal_gazebo)/launch/spawn_jackal.launch">
    <arg name="x" value="0"/>
    <arg name="y" value="0"/>
    <arg name="z" value="0.1"/>
  </include>

  <!-- PX4 SITL (drone) -->
  <node name="px4" pkg="px4" type="px4" output="screen"
      args="/home/usrg/PX4-Autopilot/ROMFS/px4fmu_common
            -s /home/usrg/PX4-Autopilot/ROMFS/px4fmu_common/init.d-posix/rcS
            -i 0" />

  <!-- Gazebo model spawn (iris drone) -->
  <node name="spawn_iris" pkg="gazebo_ros" type="spawn_model" output="screen"
        args="-sdf -file /home/usrg/PX4-Autopilot/Tools/simulation/gazebo-classic/sitl_gazebo-classic/models/iris_depth_camera/iris_depth_camera.sdf
              -model iris -x -3 -y 0 -z 0.1" />

  <!-- MAVROS -->
  <include file="$(find mavros)/launch/node.launch">
  <arg name="fcu_url" value="udp://:14540@127.0.0.1:14557"/>
  <arg name="gcs_url" value=""/>
  <arg name="tgt_system" value="1"/>
  <arg name="tgt_component" value="1"/>
  <arg name="log_output" value="screen"/>
  <arg name="fcu_protocol" value="v2.0"/>
  <arg name="pluginlists_yaml" value="$(find mavros)/launch/px4_pluginlists.yaml" />
  <arg name="config_yaml" value="$(find mavros)/launch/px4_config.yaml"/>
</include>


  <!-- RViz (optional) -->
  <include file="$(find jackal_viz)/launch/view_robot.launch"/>
</launch>